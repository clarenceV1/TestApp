<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.example.clarence.libwidget.SlidingTabLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginBottom="1dp"
        app:slidingTabTextBackground="@color/white_a"
        app:slidingTabStyle="typeAlignCenter"
        app:slidingTabIndicatorColor="@color/red_b"
        app:slidingTabTextSelectColor="@color/red_b"
        app:slidingTabTextColor="@color/black_a"
        app:countPerScreen="3.4" />

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tabs" />
</LinearLayout>